<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/iv_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/body"
        android:visibility="visible"
        android:layout_marginLeft="21dp"/>

    <ImageView
        android:id="@+id/iv_hat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/hat"
        android:layout_marginLeft="19dp"/>

    <ImageView
        android:id="@+id/iv_eyebrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eyebrows"
        android:visibility="invisible"
        android:layout_marginLeft="22dp"/>

    <ImageView
        android:id="@+id/iv_eyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/eyes"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/iv_glasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/glasses"
        android:visibility="invisible"
        android:layout_marginLeft="20dp"/>



    <ImageView
        android:id="@+id/iv_ears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/ears"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/iv_nose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/nose"
        android:layout_marginLeft="20dp"/>


    <ImageView
        android:id="@+id/iv_mouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/mouth"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/iv_mustache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/mustache"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/iv_arms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/arms"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/iv_shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/shoes"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp">
        <CheckBox
            android:id="@+id/cb_hat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="hat"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cb_glasses"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="glasses"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp">
        <CheckBox
            android:id="@+id/cb_eyes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="eyes"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cb_eyebrows"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="eyebrows"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="460dp"
    android:orientation="horizontal"
    android:layout_marginLeft="30dp">
    <CheckBox
        android:id="@+id/cb_ears"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="ears"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/cb_nose"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="nose"
        android:textSize="20sp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp">
        <CheckBox
            android:id="@+id/cb_mouth"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="mouth"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cb_mustache"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="mustache"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="520dp"
    android:orientation="horizontal"
    android:layout_marginLeft="30dp">
    <CheckBox
        android:id="@+id/cb_arms"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="arms"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/cb_shoes"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="shoes"
        android:textSize="20sp" />
</LinearLayout>



</RelativeLayout>